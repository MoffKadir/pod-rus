types PODResourceBarTypes
{
	type pod_resource_bar = button
	{
		size = { 300 50 }

		block "texture" {}

		progressbar_red = {
			block "progressbar" {}
			block "progressbar_dimensions" {
				size = { 218 15 }
				position = { 34 20 }
			}
		}
		
		button_icon = {
			size = { 100% 100% }
			alpha = 0
			using = tooltip_ne

			state = {
				name = "_mouse_hierarchy_enter"
				alpha = 1
			}

			state = {
				name = "_mouse_hierarchy_leave"
				alpha = 0
			}
			
			block "button" {}
		}
	}

	type pod_resource_bar_glamour = pod_resource_bar
	{
		blockoverride "texture" {
			texture = "gfx/interface/skinned/icon_glamour_meter.dds"
		}
		blockoverride "progressbar" {
			progresstexture = "gfx/interface/progressbars/progress_glamour.dds"
			value = "[FixedPointToFloat(GetPlayer.MakeScope.ScriptValue('glamour_level'))]"
			max = 5
		}
		blockoverride "button" {
			texture = "gfx/interface/hud/icon_glamour_meter_glow.dds"
			onclick = "[PlayerGuiExecute('glamour_hint')]"
			tooltip = "[PlayerGuiBuildTooltip('glamour_show_tooltip')]"
		}
	}
	
