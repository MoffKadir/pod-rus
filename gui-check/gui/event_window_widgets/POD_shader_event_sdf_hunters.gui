@sdf_scale = 0.9
@sdf_offset_x = 0.42
@sdf_offset_y = 0.06

pod_sdf_shader_event_widget = {
	name = "POD_shader_event_sdf_hunters"
	
	blockoverride "shader_properties" {
		spriteborder_left = 0.8 # background (black) opacity

		# first SDF
		modify_texture = {
			texture = "gfx/interface/sdf/sdf_hunters.dds"
			blend_mode = normal
			rotate_uv = @sdf_scale # scale (SpriteTranslateRotateUVAndAlpha[1].z)
			spriteborder_left = @sdf_offset_x # uv x offset (SpriteBorder[1].x)
			spriteborder_top  = @sdf_offset_y # uv y offset (SpriteBorder[1].y)
		}

		# second SDF
		modify_texture = {
			texture = "gfx/interface/sdf/sdf_hunters.dds"
			blend_mode = normal
			rotate_uv = @sdf_scale # scale (SpriteTranslateRotateUVAndAlpha[2].z)
			spriteborder_left = @sdf_offset_x # uv x offset (SpriteBorder[2].x)
			spriteborder_top  = @sdf_offset_y # uv y offset (SpriteBorder[2].y)
		}

		# color properties
		modify_texture = {
			blend_mode = normal
			spriteborder_left  = 1.0 # exponent for R channel (SpriteBorder[3].x)
			spriteborder_top   = 4.0 # exponent for G channel (SpriteBorder[3].y)
			spriteborder_right = 10.0 # exponent for B channel (SpriteBorder[3].z)
			# multiplier for R/G/B channels (alpha is discarded) (SpriteModifyTexturesColors[3])
			color = { 1.5 1.5 0.3 1.0 }
		}
	}
}