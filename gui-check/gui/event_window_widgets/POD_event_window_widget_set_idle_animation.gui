vbox = {
	name = "POD_event_window_widget_set_idle_animation"
	
	scrollbox = {
		size = { 380 365 }
		
		background = {
			using = Background_Area_ExtraDark
			margin = { 5 5 }
		}
		
		background = {
			using = Background_Frame_Gold
			margin = { 5 5 }
		}

		blockoverride "scrollbox_background" {}
		blockoverride "scrollbox_background_fade" {}
		blockoverride "scrollbox_content"
		{
			margin = { 0 0 }
			
			fixedgridbox = {
				datamodel = "[GetPlayer.MakeScope.GetList('idle_animations')]"
				addcolumn = 380
				addrow = 30
				#flipdirection = yes

				item = {
					widget = {
						size = { 380 36 }
						hbox = {
							spacer = { size = { 4 0 } }
							button_event_standard = {
								layoutpolicy_horizontal = expanding
								
								size = { 0 28 }
								
								onclick = "[GetScriptedGui('POD_idle_pose_gui').Execute(GuiScope.SetRoot(EventWindowWidget.GetScope.sC('recipient').MakeScope).AddScope('flag',MakeScopeFlag(Scope.GetFlagKey)).End)]"
								down = "[GetScriptedGui('POD_idle_pose_gui').IsShown(GuiScope.SetRoot(EventWindowWidget.GetScope.sC('recipient').MakeScope).AddScope('flag',MakeScopeFlag(Scope.GetFlagKey)).End)]"
								
								downframe = 5
								
								#tooltip = "POD_select_scoped_char"
								#using = tooltip_es
								
								#clicksound = "event:/SFX/UI/Generic/sfx_ui_generic_confirm"
								
								text = "[Scope.GetFlagName]"
								default_format = "#clickable"
							}
							
							spacer = { size = { 12 0 } }
						}
					}
				}
			}
		}
	}
	
	spacer = { size = { 0 12 } }
}