						crafting_gui_core = {
							visible = "[GetVariableSystem.HasValue( 'crafting_gui_tabs', 'brewing' )]"
							blockoverride "background_texture"
							{
								texture = "gfx/interface/illustrations/event_scenes/study_night.dds"
